<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_colour"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_test_survey_question_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/post_test_survey_question_1"
            android:textColor="@color/black"
            android:textSize="20sp"

            />

        <LinearLayout
            android:id="@+id/post_test_survey_ratingbar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_test_survey_answer_1_btn_1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_empty"
                android:fontFamily="@font/inter_regular"
                android:onClick="onClickRatingBarPostSurveyBtnListener"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_test_survey_answer_1_btn_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_empty"
                android:fontFamily="@font/inter_regular"
                android:onClick="onClickRatingBarPostSurveyBtnListener"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_test_survey_answer_1_btn_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_empty"
                android:fontFamily="@font/inter_regular"
                android:onClick="onClickRatingBarPostSurveyBtnListener"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_test_survey_answer_1_btn_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_empty"
                android:fontFamily="@font/inter_regular"
                android:onClick="onClickRatingBarPostSurveyBtnListener"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_test_survey_answer_1_btn_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_empty"
                android:fontFamily="@font/inter_regular"
                android:onClick="onClickRatingBarPostSurveyBtnListener"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_test_survey_answer_1_1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_1_1"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/post_test_survey_answer_1_2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_1_2"
                android:textAlignment="center"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/post_test_survey_question_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/post_test_survey_question_2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/post_test_survey_radio_group_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/post_test_survey_answer_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_2_1"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/post_test_survey_answer_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_2_2"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/post_test_survey_answer_2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_2_3"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/post_test_survey_answer_2_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_2_4"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RadioGroup>


        <TextView
            android:id="@+id/post_test_survey_question_3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/post_test_survey_question_3_1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/post_test_survey_radio_group_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/post_test_survey_answer_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_3_1"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/post_test_survey_answer_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_3_2"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/post_test_survey_question_3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/post_test_survey_question_3_2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/post_test_survey_answer_3_comment"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="text"
            android:ems="2"
            android:hint="@string/post_test_survey_question_3_hint"
            android:inputType="text" />

        <TextView
            android:id="@+id/post_test_survey_question_4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/post_test_survey_question_4_1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/post_test_survey_radio_group_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/post_test_survey_answer_4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_4_1"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/post_test_survey_answer_4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/post_test_survey_answer_4_2"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/post_test_survey_question_4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/post_test_survey_question_4_2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/post_test_survey_answer_4_comment"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="text"
            android:ems="2"
            android:hint="@string/post_test_survey_question_3_hint"
            android:inputType="text" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_post_test_survey"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/button_curved_corners"
            android:fontFamily="@font/inter_regular"
            android:letterSpacing="0.1"
            android:onClick="onClickPosttestSurveyBtnListener"
            android:text="@string/introduction_button_1"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>

